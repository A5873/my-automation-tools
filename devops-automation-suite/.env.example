# DevOps Automation Suite - Environment Configuration

# Application Settings
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/devops_automation
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Monitoring Thresholds
ALERT_CPU_THRESHOLD=80.0
ALERT_MEMORY_THRESHOLD=85.0
ALERT_DISK_THRESHOLD=90.0

# Log Analysis Settings
LOG_RETENTION_DAYS=30
ANOMALY_THRESHOLD=0.8

# Infrastructure Monitoring
MONITORING_INTERVAL=60

# Security Scanner
SCAN_INTERVAL=3600
VULN_DB_UPDATE_INTERVAL=86400

# Pipeline Optimizer
PIPELINE_ANALYSIS_DEPTH=100
OPTIMIZATION_THRESHOLD=0.15

# Database Performance
QUERY_TIMEOUT=30
PERFORMANCE_BASELINE_DAYS=7

# External Integrations (Optional)
SLACK_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
